#!groovy

@Library("Infrastructure")

def type = "java"
def product = "my-time"
def component = "api"

withPipeline(type, product, component) {

  onMaster() {
    env.ENV = 'stg'
  }
  onPR() {
    env.ENV = 'dev'
  }
  onDemo {
    env.ENV = 'demo'
  }
  onPerftest {
    env.ENV = 'perftest'
  }
  onIthc {
    env.ENV = 'ithc'
  }

  enableDbMigration(product)
  enableSlackNotifications('#my-time-builds')
  enableAksStagingDeployment()
  disableLegacyDeployment()
  enableApiGatewayTest()

}
